<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="DataCaption" parent="@android:style/TextAppearance.Medium">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="DataItem" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">70sp</item>
        <item name="android:layout_weight">0</item>
        <item name="android:text"></item>
        <item name="android:gravity">right</item>
        <item name="android:layout_marginRight">5sp</item>
    </style>

    <style name="DataItemCaption" parent="@android:style/TextAppearance.Small">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_weight">0</item>
    </style>

    <style name="DataFiller">
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">10</item>
        <item name="android:layout_width">0dp</item>
    </style>

    <style name="DataLayout">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="Separator">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@android:color/darker_gray</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginTop">5dp</item>
    </style>

</resources>